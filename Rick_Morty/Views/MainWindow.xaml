<Window x:Class="RickAndMortyWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RickAndMortyWPF.Views"
        Title="Rick and Morty Characters" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="CharacterListBox" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="300"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Width="450">
            <Image x:Name="CharacterImage" Height="200" Margin="10"/>
            <TextBlock x:Name="CharacterDetails" TextWrapping="Wrap" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
